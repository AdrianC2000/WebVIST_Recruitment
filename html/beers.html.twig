{% block head %}
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script type="text/javascript" src="/js/beers.js"></script>
    <link rel="stylesheet" href="/css/beers.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
{% endblock %}

{% block content %}
    <div class="container main">
        <div class="container upper_text">
            BEERS
        </div>
        {% set beersForThisSite = beers[id - 1] %}
        <br>
        <div class="row" id="firstRow">
            {% for beer in beersForThisSite | slice(0, 3) %}
            <div class="col-md-4 d-flex justify-content-center">
                <div class="col-lg-12 singleBoard">
                    <p> <i class="fa fa-star fa-2x" aria-hidden="true"></i> </p>
                    <h4 class="header"> {{ beer.name }} </h4> <br>
                    <div class="leftAlign">
                        <h6 class="description"> {{ beer.description }} </h6>
                        <h5 class="header"> Ingredients </h5>
                        <h6 class="ingredients">
                            <b> Malt: </b>
                            {% for malt in beer.ingredients.malt %}
                                {{ malt.name }},
                            {% endfor %}
                            <br>
                            <b> Hops: </b>
                            {% for hops in beer.ingredients.hops %}
                                {{ hops.name }},
                            {% endfor %}
                            <br>
                            <b> Yeast: </b>
                            {{ beer.ingredients.yeast }}
                        </h6> <br>
                        <img src="{{ beer.image_url }}" alt="Beer photo" class="beerJPG"> <br>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        <br>
        <div class="row" id="secondRow">
            {% for beer in beersForThisSite | slice(3, 5) %}
                <div class="col-md-4 d-flex justify-content-center">
                    <div class="col-lg-12 singleBoard">
                        <p> <i class="fa fa-star fa-2x" aria-hidden="true"></i> </p>
                        <h4 class="header"> {{ beer.name }} </h4> <br>
                        <div class="leftAlign">
                            <h6 class="description"> {{ beer.description }} </h6>
                            <h5 class="header"> Ingredients </h5>
                            <h6 class="ingredients">
                                <b> Malt: </b>
                                {% for malt in beer.ingredients.malt %}
                                    {{ malt.name }},
                                {% endfor %}
                                <br>
                                <b> Hops: </b>
                                {% for hops in beer.ingredients.hops %}
                                    {{ hops.name }},
                                {% endfor %}
                                <br>
                                <b> Yeast: </b>
                                {{ beer.ingredients.yeast }}
                            </h6> <br>
                            <img src="{{ beer.image_url }}" alt="Beer photo" class="beerJPG"> <br>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
        <br>
        {% if id == 1 %}
            {% for i in id .. id + 2  %}
                {% if i == id %}
                    <button type="button" class="button"> <b> {{ i }} </b> </button>
                {% else %}
                    <button type="button" class="button"> {{ i }} </button>
                {% endif %}
            {% endfor %}
            ...  <button type="button" class="button right"> <i class="fa fa-angle-right fa-lg fa-bold" aria-hidden="true"></i> </button>
        {% elseif id == 2 %}
            {% for i in id - 1 .. id + 1  %}
                {% if i == id %}
                    <button type="button" class="button"> <b> {{ i }} </b> </button>
                {% else %}
                    <button type="button" class="button"> {{ i }} </button>
                {% endif %}
            {% endfor %}
            ...  <button type="button" class="button right"> <i class="fa fa-angle-right fa-lg fa-bold" aria-hidden="true"></i> </button>
        {% elseif id == subpagesCounter - 1 %}
            <button type="button" class="button left"> <i class="fa fa-angle-left fa-lg fa-bold" aria-hidden="true"></i> </button> ...
            {% for i in id - 1 .. id + 1  %}
                {% if i == id %}
                    <button type="button" class="button"> <b> {{ i }} </b> </button>
                {% else %}
                    <button type="button" class="button"> {{ i }} </button>
                {% endif %}
            {% endfor %}
        {% elseif id == subpagesCounter %}
            <button type="button" class="button left"> <i class="fa fa-angle-left fa-lg fa-bold" aria-hidden="true"></i> </button> ...
            {% for i in id - 2 .. id  %}
                {% if i == id %}
                    <button type="button" class="button"> <b> {{ i }} </b> </button>
                {% else %}
                    <button type="button" class="button"> {{ i }} </button>
                {% endif %}
            {% endfor %}
        {% else %}
            <button type="button" class="button left"> <i class="fa fa-angle-left fa-lg fa-bold" aria-hidden="true"></i> </button> ...
            {% for i in id - 1 .. id + 1  %}
                {% if i == id %}
                    <button type="button" class="button"> <b> {{ i }} </b> </button>
                {% else %}
                    <button type="button" class="button"> {{ i }} </button>
                {% endif %}
            {% endfor %}
            ...  <button type="button" class="button right"> <i class="fa fa-angle-right fa-lg fa-bold" aria-hidden="true"></i> </button>
        {% endif %}
        <br>
        <img src="/images/vist.png" alt="Vist logo" class="logo">
    </div>
{% endblock %}
